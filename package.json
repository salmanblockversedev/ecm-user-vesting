{
  "name": "ecmcoin-user-vesting",
  "version": "1.0.0",
  "description": "ECM Coin User Vesting smart contract deployment and management",
  "main": "index.js",
  "scripts": {
    "clean": "hardhat clean",
    "build": "hardhat compile",
    "test": "hardhat test",
    "test:logs": "hardhat test --trace",
    "watch": "hardhat watch compilation",
    "deploy:network": "hardhat ignition deploy ignition/modules/vesting.ts --deployment-id ecm-deployment-v1 --network",
    "deploy:verify": "hardhat ignition deploy ignition/modules/vesting.ts --verify --network ",
    "verify:network": "hardhat ignition verify ecm-deployment-v1 --include-unrelated-contracts --network"
  },
